
<link href="~/Content/signUpSTyle.css" rel="stylesheet" />
@model TV5.Models.SignUp

@{
    ViewBag.Title = "Create";
}

<h2>Sign Up</h2>

<div>
    <a href=" @Url.Action("Index","Home" )"> <span class="glyphicon glyphicon-arrow-left btn-lg"></span>Back</a>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>Enter email address</p>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p>
                    <a class="btn btn-primary btn-md topButn" href=@Url.Action("Index", "VideoPlayers")>Sign Up</a>
                
                </p>
            </div>
        </div>
    </div>
    <br />
    <h4>"Finally, one location for live high school sports!"</h4>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
